<h1><%= @recipe.name %></h1>

<form method="POST" action="/recipes/<%= @recipe.id%>">
<input id="hidden" type="hidden" name="_method" value="PATCH">
<label>Name: <input type="text" name="name" value="<%= @recipe.name%>">
<label>Ingredients: <input type="text" name="ingredients" value="<%= @recipe.ingredients%>">
<label>Cook time: <input type="text" name="cook_time" value="<%= @recipe.cook_time%>">
<input type="submit">
</form>
